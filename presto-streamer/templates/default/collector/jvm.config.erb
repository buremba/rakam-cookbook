-server
<% if ["i3.2xlarge", "m4.4xlarge"].include?(node["opsworks"]["instance"]["instance_type"]) -%>
-Xmx50G
<% elsif ["c3.4xlarge", "i3.xlarge", "m3.2xlarge", "m4.2xlarge",  "m5.2xlarge", "i3.xlarge"].include?(node["opsworks"]["instance"]["instance_type"]) -%>
-Xmx24G
<% elsif ["c3.2xlarge", "m3.xlarge", "m4.xlarge", "m5.xlarge", "i3.large"].include?(node["opsworks"]["instance"]["instance_type"]) -%>
-Xmx10G
<% elsif ["c3.xlarge", "m3.large", "m4.large", "m5.large", "t2.large"].include?(node["opsworks"]["instance"]["instance_type"]) -%>
-Xmx7G
<% else -%>
-Xmx3G
<% end -%>
-XX:+UseG1GC
-XX:+UseGCOverheadLimit
-XX:+ExplicitGCInvokesConcurrent
-XX:+ExitOnOutOfMemoryError
-Djava.util.logging.config.file=/home/webapp/presto/etc/logging.properties
<%= node["jvm-properties"] %>
