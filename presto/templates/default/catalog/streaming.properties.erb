connector.name=streaming

stream.source=kinesis
middleware.max-flush-duration=30s

kinesis.stream=<%= node["kinesis"] %>
aws.region=<%= node["opsworks"]["instance"]["region"] %>
kinesis.consumer-dynamodb-table=<%= node["dynamodb_consumer_table"] %>
target.connector_id=rakam_raptor

storage.directory=./var/stream
backup.timeout=1m

backup.provider=s3
backup.s3.bucket=<%= node["s3"]["streaming"] %>

metadata.host=<%= node["opsworks"]["stack"]["rds_instances"][0]["address"] %>
metadata.username=<%= node["opsworks"]["stack"]["rds_instances"][0]["master_username"] %>
metadata.password=<%= node["deploy"]["presto"]['environment_variables']["DB_PASSWORD"] %>
metadata.database=<%= node["opsworks"]["stack"]["rds_instances"][0]["db_name"] %>
http-client.request-timeout=30s

http-server.http.port=5466
aws.s3-bulk-bucket=<%= node["s3"]["bulk"] %>
