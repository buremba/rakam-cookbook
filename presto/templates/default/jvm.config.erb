-server
<% if node["opsworks"]["instance"]["instance_type"] == 'c3.2xlarge' -%>
-Xmx8G
<% elsif node["opsworks"]["instance"]["instance_type"] == 'c3.xlarge' -%>
-Xmx4G
<% elsif node["opsworks"]["instance"]["instance_type"] == 'c3.large' -%>
-Xmx2G
<% else -%>
-Xmx2G
<% end -%>
-XX:+UseG1GC
-XX:+UseGCOverheadLimit
-XX:+ExplicitGCInvokesConcurrent
-XX:+HeapDumpOnOutOfMemoryError
-XX:OnOutOfMemoryError=kill -9 %p
<%= node["jvm-properties"] %>
