-Xmx4G
<% else -%>
-Xmx2G
<% end -%>
-XX:OnOutOfMemoryError="kill -9 %p && /home/webapp/rakam-server/bin/launcher start"
-Djava.util.logging.config.file=/home/webapp/rakam-server/etc/logging.properties
