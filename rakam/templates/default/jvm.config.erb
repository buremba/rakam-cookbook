<% if node["opsworks"]["instance"]["instance_type"] == 'r4.xlarge' -%>
-Xmx24G
<% elsif node["opsworks"]["instance"]["instance_type"] == 'r4.large' -%>
-Xmx12G
<% elsif node["opsworks"]["instance"]["instance_type"] == 'c3.2xlarge' || node["opsworks"]["instance"]["instance_type"] == 'm3.xlarge' -%>
-Xmx8G
